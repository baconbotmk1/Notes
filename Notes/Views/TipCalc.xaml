<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.TipCalc"
             Title="Tip Calculator!">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label 
            Text="Bill"
            HorizontalOptions="Center" />
            <Entry x:Name="UserInput"
               Placeholder="Enter amount"
               TextChanged="UserInput_Changed"
               Keyboard="Numeric"
               HorizontalOptions="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Tip"
               HorizontalOptions="Center"/>
            <Label x:Name="TipLabel"
               Text="(uninitialized)"
               HorizontalOptions="Center"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Total"
               HorizontalOptions="Center"/>
            <Label x:Name="TotalLabel" 
               Text="(uninitialized)"
               HorizontalOptions="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label x:Name="TipPercent"
               Text="Tip percentage"
               HorizontalOptions="Center"/>
            <Label x:Name="TipPercentLabel"
               Text="(uninitialized)"
               HorizontalOptions="Center"/>
        </HorizontalStackLayout>

        <Slider x:Name="MyTipSlider"
                Minimum="0" 
                Maximum="100" 
                Value="15"
                ValueChanged="OnSliderValueChanged"/>
        <HorizontalStackLayout>
            <Button Text="15%"
                Clicked="On15Clicked"
                HorizontalOptions="Center"/>
            <Button Text="20%"
                Clicked="On20Clicked"
                HorizontalOptions="Center"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Button Text="Round Down"
                Clicked="OnRoundDownClicked"
                HorizontalOptions="Center"/>
            <Button Text="Round Up"
                Clicked="OnRoundUpClicked"
                HorizontalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>